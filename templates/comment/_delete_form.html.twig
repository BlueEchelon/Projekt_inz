<form method="post" class="col-2" action="{{ path('app_comment_delete', {'id': comment.id, 'device_id': comment.device.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn"><i class="material-icons">delete</i></button>
</form>
