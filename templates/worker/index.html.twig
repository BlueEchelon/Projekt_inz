{% extends 'base.html.twig' %}

{% block title %}Worker index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- Material Kit CSS -->
    <link href="{{ asset("mdp/assets/css/material-dashboard.css?v=2.2.2") }}" rel="stylesheet" />
    <link href="{{ asset('device_styl.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}
    <div class="card">
        <div class="card-header card-header-success card-header-icon">
            <div class="card-icon">
                <i class="material-icons">list</i>
            </div>
            <h4 class="card-title">Workers List</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                {% if is_granted('ROLE_OWNER') %}
                    <table class="table" id="workerlist2">
                        <thead>
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Username</th>
                            <th>Description</th>
                            <th>Ad Group</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for worker in workers %}
                            <tr>
                                <td>{{ worker.id }}</td>
                                <td>{{ worker.name }}</td>
                                <td>{{ worker.surname }}</td>
                                <td>{{ worker.username }}</td>
                                <td>{{ worker.description }}</td>
                                <td>{{ worker.adGroup }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </div>
                    </div>
                {% else %}
                <table class="table" id="workerlist">
                    <thead>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Username</th>
                        <th>Description</th>
                        <th>AD group</th>
                        <th class="text-center" data-exclude="true">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for worker in workers %}
                        <tr>
                            <td>{{ worker.id }}</td>
                            <td>{{ worker.name }}</td>
                            <td>{{ worker.surname }}</td>
                            <td>{{ worker.username }}</td>
                            <td>{{ worker.description }}</td>
                            <td>{{ worker.adGroup }}</td>
                            <td class="td-actions text-right">
                                <div class="row justify-content-center">
                                    <div class="col-2">
                                        <a class="btn btn-warning" href="{{ path('app_worker_edit', {'id': worker.id}) }}">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </div>
                                    {{ include('worker/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
                    {% if is_granted('ROLE_EDIT_WORKER') %}
                        <div class="col text-center">
                            <a class="btn btn-success btn-sm" href="{{ path('app_worker_new') }}">Add new User</a>
                        </div>
                    {% endif %}
        </div>
        {% endif %}
    </div>
{% endblock %}
{% block add_script%}
    <script>
        $(document).ready(function () {
            $().ready(function () {
                let workerTable = $("#workerlist").DataTable({
                    "columnDefs": [
                        {
                            "orderable": false,
                            targets: [5,6]
                        }
                    ],
                    "order": [[0,  'asc']],
                    "pageLength": 25
                });
            })
            $().ready(function () {
                let workerTable = $("#workerlist2").DataTable({
                    "columnDefs": [
                        {
                            "orderable": false,
                            targets: [5]
                        }
                    ],
                    "order": [[0,  'asc']],
                    "pageLength": 25
                });
            })
        })
    </script>
{% endblock %}
