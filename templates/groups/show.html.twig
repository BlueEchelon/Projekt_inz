{% extends 'base.html.twig' %}

{% block title %}Groups{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header card-header-icon card-header-success">
            <div class="card-icon">
                <i class="material-icons">groups</i>
            </div>
            <h3 class="card-title">Group</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ group.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ group.name }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            {% if is_granted('ROLE_OWNER') %}
            {% else %}
                <a class="btn btn-warning" href="{{ path('app_groups_edit', {'id': group.id}) }}">edit</a>

                {{ include('groups/_delete_form.html.twig') }}
            {% endif %}
        </div>
        <div class="col text-center">
            <a class="btn btn-primary" href="{{ path('app_groups_index') }}">back to list</a>
        </div>
    </div>
{% endblock %}
