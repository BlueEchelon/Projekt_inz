            <div class="table-responsive">
                <table class="table" id="raportlist">
                    <thead>
                    <tr>
                        <th>Report name</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><a href="{{ path('app_report_manufacturer') }}">Manufacturers</a></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('app_report_model_summary') }}">Model Summary</a></td>
