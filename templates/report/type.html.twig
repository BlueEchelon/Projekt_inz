{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header card-header-success card-header-icon">
            <div class="card-icon">
                <i class="material-icons">list</i>
            </div>
            <h4 class="card-title">OS Type counter</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                {% if is_granted('ROLE_OWNER') %}
                {% elseif is_granted('ROLE_REPORT_GEN') %}
                <div class="row border-bottom">
                    <div class="col text-center">
                        <button class="btn btn-warning mb-3 exportOsType">Export table to Excel Spreadsheet</button>
                    </div>
                </div>
                {% endif %}
                <table class="table" id="ostypelist" data-cols-width="25,8">
                    <thead>
                    <tr>
                        <th>OS Type</th>
                        <th>Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for os in type %}
                        <tr>
                            <td>{{ os.type }}</td>
                            <td>{{ os.counter }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="text-center">No OS Type found</td>
                            <td colspan="d-none"></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col text-center">
                    <a class="btn btn-rose" href="{{ path('app_report_index') }}">Return to Reports</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block add_script %}
    <script>
        $(document).ready(function () {
            $().ready(function () {
                $(".exportOsType").click(function (e){
                    let tableId = $(this).data("tid");
                    let tableOsType = document.querySelector("#ostypelist").cloneNode(true);
                    tableOsType.innerHTML = tableOsType.innerHTML.replace(/>-</g,'><');

                    let name = 'OS_type.xlsx';
                    let book = TableToExcel.tableToBook(tableOsType,{
                        sheet:{
                            name: "OS Type List"
                        }
                    });
                    TableToExcel.save(book,name)
                })
                let ostypeTable = $("#ostypelist").DataTable({
                    "order": [[0,  'asc']],
                    "pageLength": 25
                });
            })
        })
    </script>
{% endblock %}

